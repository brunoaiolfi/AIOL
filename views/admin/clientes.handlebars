<div style="margin-left: 22vw; width: 100vw; padding:50px">
<div class="list-group" style=" width: 70vw">

    <div class="d-grid gap-2">
        <button type="button" class="mb-3 btn btn-success" data-bs-toggle="modal" data-bs-target="#modalCadastro">
              Cadastrar Cliente
        </button>
    </div>

        {{#each erros}}
            <div class="alert alert-danger alert-dismissible fade show" style="" role="alert">
                {{texto}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        {{/each}}
        {{#each sucesso}}
            <div class="alert alert-success alert-dismissible fade show" style="" role="alert">
                {{texto}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
                </button>
            </div>
        {{/each}}

    {{#each clientes}}
       
            <div class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">

                    <h5 class="mb-1">{{dataValues.nome_cliente}}</h5>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        
                            <a href="/deleteCliente/{{dataValues.id}}" class="btn btn-danger me-md-2">
                                Excluir
                            </a>
                        
                            
                            <a href="/formEditCliente/{{dataValues.id}}" class="btn btn-secondary me-md-2">
                                Editar
                            </a>
                          
                       
                    </div>

                </div>
                <p class="mb-1">CPF: {{dataValues.cpf}}</p>
                <p class="mb-1">Sexo: {{dataValues.sexo_cliente}}</p>

            </div><br>
            
    {{/each}}
</div>
</div>
    {{#else}}
        <h1>Nenhum cadastrado</h1>
    {{/else}}

    

  
 
 <div class="modal fade" id="modalCadastro" tabindex="-1" aria-labelledby="modalCadastro" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Cadastrar cliente</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        {{!-- FORM --}}

        <form action="/cadastrarCliente" method="POST">
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Nome do cliente</label>
                    <input type="text" name="Fnome_cliente" class="form-control" id="exampleInputPassword1" required>

                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">CPF</label>
                    <input type="number"  name="Fcpf_cliente" class="form-control" id="exampleInputPassword1" required>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Data de nascimento</label>
                    <input type="date" name="FanoNasc_cliente" class="form-control" id="exampleInputPassword1" required>
                </div>
                <div class="mb-3">
                   <label for="exampleInputPassword1" class="form-label">Sexo:</label>
                        <select class="form-select" name="Fsexo" aria-label="Default select example" required>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Outro">Outro</option>
                        </select>

                </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success">Cadastrar-se</button>
            </div>    
        </form>
      </div>
      
    </div>
  </div>
</div>




