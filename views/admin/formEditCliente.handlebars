{{#cliente}}
    <div style="width: 100vw; padding:50px">
    <div style="background-color: #fff;  margin-left: 31vw; padding: 20px 40px;  border-radius: 10px; width: 45vw">

    <form action="/editCliente" style="" method="POST">
                {{!-- Nome --}}
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Nome do funcion√°rio</label>
                    <input placeholder="{{dataValues.nome_cliente}}" type="text" name="Fnome_funcionario" class="form-control"  required>

                </div>
                {{!-- CPF --}}
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">CPF</label>
                    <input placeholder="{{dataValues.cpf}}" type="number" name="Fcpf_cliente" class="form-control"  required>

                </div>
                {{!-- Senha --}}
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Sexo:</label>
                        <select class="form-select" name="Fsexo_cliente" aria-label="Default select example" required>
                            <option value="Masculino">Masculino</option>
                            <option value="Feminino">Feminino</option>
                            <option value="Outro">Outro</option>
                        </select>
                </div>

                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Ano de nascimento</label>
                    <input placeholder="{{dataValues.dataNasc_cliente}}" type="date" name="FanoNasc_cliente" class="form-control"  required>
                </div>

            <div class="modal-footer">
                <a href="/clientes"class="btn btn-danger">Cancelar</a>
                <button type="submit" class="btn btn-success">Editar</button>
            </div>    
        </form>
